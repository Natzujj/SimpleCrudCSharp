@model MeuCrudCSharp.Models.Item

@{
    ViewData["Title"] = "Editar Item";
}

<h4 class="page-title">Editar Item</h4>
<hr class="divider" />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" class="item-form">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <label asp-for="Nome" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Nome" class="form-control" id="Nome" type="text" />
                    <span asp-validation-for="Nome" class="text-danger validation-message"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Preco" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Preco" class="form-control" id="Preco" type="number" step="0.01" />
                    <span asp-validation-for="Preco" class="text-danger validation-message"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Atualizar" class="btn btn-primary btn-submit" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="back-link">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}